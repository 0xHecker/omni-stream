# Web UI service (Flask + Waitress)
# Optional overrides only. Binary mode uses a first-run setup UI and local settings file.
STREAM_SERVICE=all
STREAM_ROOT_DIR=C:/path/to/share
STREAM_PIN=123456
STREAM_SECRET_KEY=change-this
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_THREADS=16
WEB_CONNECTION_LIMIT=2000
WEB_CHANNEL_TIMEOUT_SECONDS=30
STREAM_ENABLE_VIDEO_THUMBNAILS=1
STREAM_FFMPEG_BIN=
STREAM_THUMBNAIL_CACHE_DIR=
STREAM_THUMBNAIL_CACHE_TTL_SECONDS=1800
STREAM_THUMBNAIL_CACHE_MAX_MB=256
STREAM_THUMBNAIL_MAX_CONCURRENT=4
STREAM_THUMBNAIL_ACQUIRE_TIMEOUT_MS=80
FLASK_DEBUG=1

# Coordinator service
COORDINATOR_DATABASE_URL=sqlite:///./coordinator.db
COORDINATOR_SECRET_KEY=replace-with-strong-coordinator-key
COORDINATOR_AGENT_SHARED_SECRET=replace-with-strong-agent-secret
COORDINATOR_ACCESS_TOKEN_TTL=3600
COORDINATOR_EVENTS_WS_TOKEN_TTL=90
COORDINATOR_READ_TICKET_TTL=1800
COORDINATOR_TRANSFER_TICKET_TTL=1800
COORDINATOR_BROWSE_PIN=123456
COORDINATOR_PASSCODE_WINDOW_SECONDS=300
COORDINATOR_PAIRING_CODE_TTL=600
COORDINATOR_AUTO_JOIN=1
COORDINATOR_HOST=0.0.0.0
COORDINATOR_PORT=7000
# Optional discovery tuning (useful on office VPN / multi-adapter hosts)
STREAM_COORDINATOR_HINTS=
STREAM_DISCOVERY_INCLUDE_CIDRS=
STREAM_DISCOVERY_EXCLUDE_CIDRS=
COORDINATOR_WORKERS=2
COORDINATOR_BACKLOG=2048
COORDINATOR_KEEPALIVE_SECONDS=8
COORDINATOR_LIMIT_CONCURRENCY=2048
COORDINATOR_SYNC_THREAD_TOKENS=64
COORDINATOR_SEARCH_WORKERS=16
COORDINATOR_RELOAD=1

# Agent service
AGENT_DEVICE_ID=replace-with-stable-device-id
AGENT_OWNER_PRINCIPAL_ID=replace-with-owner-principal-id
AGENT_NAME=My Device Agent
AGENT_PUBLIC_BASE_URL=http://192.168.1.50:7001
AGENT_COORDINATOR_URL=http://192.168.1.50:7000
AGENT_STATE_DB_URL=sqlite:///./agent_state.db
AGENT_DEFAULT_SHARE_ID=replace-with-stable-share-id
AGENT_DEFAULT_SHARE_NAME=Home Share
AGENT_DEFAULT_SHARE_ROOT=C:/path/to/share
AGENT_INBOX_DIR=C:/path/to/share/.inbox
AGENT_HEARTBEAT_SECONDS=20
AGENT_UPLOAD_CHUNK_MAX_BYTES=8388608
AGENT_HOST=0.0.0.0
AGENT_PORT=7001
AGENT_WORKERS=1
AGENT_BACKLOG=2048
AGENT_KEEPALIVE_SECONDS=8
AGENT_LIMIT_CONCURRENCY=2048
AGENT_SYNC_THREAD_TOKENS=64
AGENT_RELOAD=1
